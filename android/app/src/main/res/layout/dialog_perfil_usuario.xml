                android:text="@string/followers_upper"
                android:textColor="@color/gray_font"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingRight="15dp">

