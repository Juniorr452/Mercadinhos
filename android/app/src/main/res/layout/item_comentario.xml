<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fundoRecycle"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/foto_comentario"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_chat_msg_conteudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:backgroundTint="@color/fundoPost"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/border_chat_mensagem"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/nome_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jonas S Ramos"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/gray_font"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/postTime_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_font"
                android:layout_marginLeft="10dp"
                android:text="01/01/2018"/>
        </LinearLayout>



        <TextView
            android:id="@+id/texto_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxWidth="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text="Testando comentario"/>
    </LinearLayout>
</LinearLayout>