<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:backgroundTint="@color/fundoPost"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/turma_capa"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@color/gray"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="45dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="115dp"
                android:layout_gravity="center"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/icon_turma_professor"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/turma_opcoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-90dp"
            android:background="@drawable/settings_dots"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/turma_nome"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Nome da matÃ©ria" />

        <TextView
            android:id="@+id/turma_dia"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textColor="@color/gray_font"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Dia da semana"/>

    </LinearLayout>
</android.support.v7.widget.CardView>